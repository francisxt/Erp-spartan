@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="card">
    <div class="card-body">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword">Antigua contraseña</label>
                        <input asp-for="Input.OldPassword" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword">Nueva</label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirmar</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}